<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="jnome.eclipse"
         name="Jnome Eclipse"
         point="chameleon.eclipse.language">
         <bootstrapper
          class="org.aikodi.java.eclipse.Bootstrapper">
         </bootstrapper>
   </extension>

   <extension point="org.eclipse.core.contenttype.contentTypes"> 
      <file-association 
       content-type="be.chameleon.eclipse.chameleonsource"
       file-extensions="java"/>
   </extension> 

 <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.aikodi.java.actions.project.AddChameleonNature"
               label="Enable Chameleon Analysis">
            <!--<visibleWhen>
              	<test property="chameleon.properties.isJDTProject" forcePluginActivation="true"/>
            </visibleWhen>-->
            
            <visibleWhen>
				           <with variable="activeMenuSelection">
				            <iterate ifEmpty="false">
                 <and>
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.projectNature" value="org.eclipse.jdt.core.javanature" />
				             </adapt>
                     <not>
				             <adapt type="org.eclipse.core.resources.IResource">
				               <test property="org.eclipse.core.resources.projectNature" value="be.chameleon.eclipse.BackgroundNature" />
				             </adapt>
                     </not>
				             
                 </and>
				            </iterate>
				           </with>
         			</visibleWhen>
         </command>
      </menuContribution>
  </extension>



  <extension point="org.eclipse.ui.commands">
    <command
        name="Add Chameleon Background Analysis Nature"
        description="Add Chameleon Background Analysis Nature"
        id="org.aikodi.java.actions.project.AddChameleonNature">
    </command>
  </extension>

  <extension point="org.eclipse.ui.handlers">
    <handler
            class="org.aikodi.chameleon.eclipse.nature.AddBackgroundNature"
            commandId="org.aikodi.java.actions.project.AddChameleonNature">
    </handler>
  </extension>

